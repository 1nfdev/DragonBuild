#!/bin/sh

source $DRAGONBUILD/internal/dragoncolors

function get_make_var()
{
    echo 'unique123:;@echo ${'"$1"'}' | 
        make -j 9 -f - -f "$2" --no-print-directory unique123
}

echo -e "${GenColor}[DragonGen]${BoldColor} Invoking GNU Make to process variables${NC}"
echo -e "${GenColor}[DragonGen]${NC} If your theos is slow, this will be too.${NC}"
tweakNameVar=$(get_make_var "TWEAK_NAME" "Makefile")
echo -e "${GenColor}[DragonGen]${NC} Tweak Name: ${tweakNameVar} ${NC}"
targetVar=$(get_make_var "TARGET" "Makefile")
echo -e "${GenColor}[DragonGen]${NC} Target: ${targetVar} ${NC}"
tweakFiles=$(get_make_var "${tweakNameVar}_FILES" "Makefile")
echo -e "${GenColor}[DragonGen]${NC} Files: ${tweakFiles} ${NC}"
tweakFlags=$(get_make_var "${tweakNameVar}_CFLAGS" "Makefile")
echo -e "${GenColor}[DragonGen]${NC} CFlags: ${tweakFlags} ${NC}"
tweakArchs=$(get_make_var "ARCHS" "Makefile")
echo -e "${GenColor}[DragonGen]${NC} Archs: ${tweakArchs} ${NC}"

echo -e "${GenColor}[DragonGen]${BoldColor} Generating DragonMake variables${NC}"

gTweakName="\"$tweakNameVar\""

echo -e "${GenColor}[DragonGen]${NC} TWEAK_NAME=$gTweakName ${NC}"

gTweakType="\""
if grep -q tweak.mk "Makefile"; then
    gTweakType="\"Tweak\""
fi

echo -e "${GenColor}[DragonGen]${NC} TWEAK_TYPE=$gTweakType ${NC}"

gLogosFiles="\""
gTweakFiles="\""

set -f
subsb=(${tweakFiles})
set +f 
for i in "${subsb[@]}"; do
    if [[ $i =~ .*.x.?$ ]]; then
        gLogosFiles+="$i "
    else
        gTweakFiles+="$i "
    fi
done
gLogosFiles+="\""
gTweakFiles+="\""

echo -e "${GenColor}[DragonGen]${NC} LOGOS_FILES=$gLogosFiles ${NC}"
echo -e "${GenColor}[DragonGen]${NC} TWEAK_FILES=$gTweakFiles ${NC}"

gMinIOS="\"11.0\""

echo "# Automatically Generated by DragonGen" > DragonMake 
echo "" >> DragonMake
echo "TWEAK_NAME=$gTweakName" >> DragonMake
echo "" >> DragonMake 
echo "TWEAK_TYPE=$gTweakType" >> DragonMake
echo "" >> DragonMake 
echo "LOGOS_FILES=$gLogosFiles" >> DragonMake
echo "TWEAK_FILES=$gTweakFiles" >> DragonMake
echo "" >> DragonMake
echo "MINIOS=$gMinIOS" >> DragonMake
echo "ARCHS=\"$tweakArchs\"" >> DragonMake
echo "" >> DragonMake
echo "CFLAGS=\"$tweakFlags\"" >> DragonMake
echo "" >> DragonMake
echo "INSTALL_CMD=\"sbreload\"" >> DragonMake